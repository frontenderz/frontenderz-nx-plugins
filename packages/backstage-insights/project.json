{
  "name": "backstage-insights",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backstage-insights/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "generate": {
      "executor": "./src/executors/generate:default",
      "options": {}
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/backstage-insights",
        "main": "packages/backstage-insights/src/index.ts",
        "tsConfig": "packages/backstage-insights/tsconfig.lib.json",
        "assets": [
          "packages/backstage-insights/*.md",
          "packages/backstage-insights/executors.json",
          "packages/backstage-insights/generators.json",
          {
            "input": "./packages/backstage-insights/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/backstage-insights/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/backstage-insights",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/backstage-insights",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/backstage-insights/jest.config.js",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
